[Unit]
Description=gunicorn daemon
Requires=gunicorn-lilongwe.sock
After=network.target

[Service]
User=ambition
Group=www-data
WorkingDirectory=/home/ambition/ambition
ExecStart=/home/ambition/.venvs/ambition/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/gunicorn-lilongwe.sock \
    ambition.wsgi.lilongwe:application
SyslogIdentifier=gunicorn-lilongwe
Restart=always

[Install]
WantedBy=multi-user.target