[Unit]
Description=gunicorn daemon
Requires=gunicorn-harare.sock
Before=nginx.service
After=network.target

[Service]
User=ambition
Group=www-data
WorkingDirectory=/home/ambition/ambition
ExecStart=/home/ambition/.venvs/ambition/bin/gunicorn \
    --access-logfile - \
    --workers 3 \
    --bind unix:/run/gunicorn-harare.sock \
    ambition.wsgi.harare:application
SyslogIdentifier=gunicorn-harare
Restart=always

[Install]
WantedBy=multi-user.target